{
  "manifest_version": 3,
  "name": "easy comment",
  "version": "1.0",
  "description": "Webページ上でドラッグで範囲を選択して、コメントを追加できるツール",
  "permissions": ["storage", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "ページにコメントを追加"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "128": "icons/easy-comment-icon.png"
  }
}
